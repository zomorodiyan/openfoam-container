FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300.0;

boundaryField
{
	frontAndBack{
type fixedGradient;
gradient uniform -50.0;
	}

    lowerWall
    {
type zeroGradient;
    }

    atmosphere
    {
type zeroGradient;
    }

    "defaultFaces|rightWall|leftWall"
    {
        type            empty;
    }
}

